#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#DH_VERBOSE = 1

export PYBUILD_DISABLE = configure test
export PYBUILD_INSTALL_ARGS_python3 = --install-layout=deb \
	--install-lib=/usr/share/openshot-qt \
	--install-scripts=/usr/share/openshot-qt

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_build:
	doxygen Doxyfile.in

override_dh_install:
	dh_install
	find debian/openshot-qt -name 'openshot.desktop' \
		-exec sed -i -e 's/launch-openshot/openshot-qt/g' {} \;

override_dh_installdocs:
	dh_installdocs
	dh_doxygen
